
<form action="/insert" method="post" class="text-center border border-light p-5">
    <h3 class="h4 mb-4">{{title}}</h3>
    <input type="hidden" name="id" value={{data._id}}>
    <center>
        <input type="text" class="form-control col-md-6 mb-4" placeholder="Enter Name" name="name" value={{data.name}}>
        <input type="email" class="form-control mb-4 col-md-6 " placeholder="E-mail" name="email" value={{data.email}}>
        <input type="password" class="form-control mb-4 col-md-6 " placeholder="Password" name="password" value={{data.pass}}>
    
    <div class="d-flex" style="margin-left: 30%">
        <button class="btn btn-info btn-block my-4 col-md-3" type="submit">Save data</button>&nbsp;&nbsp;&nbsp;&nbsp;
        <a href="/showData" class="btn btn-secondary btn-block my-4 col-md-3">View All</a>
    </div>
    </center>
</form>
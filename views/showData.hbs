
<div class="container" style="margin-top: 20px;">
  <h1>
    <a href="/" class="btn btn-secondary col-md-2"><i class="fa fa-plus"> Add New</i></a>
  Student Details
  </h1>
  <hr>
</div>

<div class="container p-5">
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Student Name</th>
      <th>Email</th>
      <th>Password</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.pass}}</td>
            <td>
            <a href="/delete/{{this._id}}"><i class="fas fa-trash-alt"></i></a>&nbsp;
            <a href="/update/{{this._id}}"><i class="fas fa-pencil-alt"></i></a>
            </td>
        </tr>
      {{/each}}
  </tbody>
</table>
</div>
